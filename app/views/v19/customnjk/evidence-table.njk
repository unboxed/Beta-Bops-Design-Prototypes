{% macro evidenceTable(
    type,
    asset1, day1_1, month1_1, year1_1, day1_2, month1_2, year1_2, comment1,
    asset2, date2_1, date2_2, comment2,
    asset3, date3_1, date3_2, comment3,
    asset4, date4_1, date4_2, comment4
) %}
{% block content %}

<table class="govuk-table">
  <caption class="govuk-table__caption govuk-table__caption--l">{{type}}</caption>
  <thead class="govuk-table__head">
    <tr class="govuk-table__row">
      <th scope="col" class="govuk-table__header">Document</th>
      <th scope="col" class="govuk-table__header">Dates covered</th>
      <th scope="col" class="govuk-table__header">Comment</th>
    </tr>
  </thead>
  <tbody class="govuk-table__body">
    <tr class="govuk-table__row">
      <th scope="row" class="govuk-table__header"><img src="{{asset1}}" style="width:200; border: solid 1px #bcbcbc"/></th>
      <td class="govuk-table__cell"><a class="govuk-link" href="set-evidence-date.html">{{day1_1}}&nbsp{{month1_1}}&nbsp{{year1_1}}</a><br>-<br><a class="govuk-link" href="#">{{day1_2}}&nbsp{{month1_2}}&nbsp{{year1_2}}</a></td>
      <td class="govuk-table__cell"><a class="govuk-link" href="immunity-bills-comment.html">{{comment1}}</a></td>
    </tr>
    <tr class="govuk-table__row">
       <th scope="row" class="govuk-table__header"><img src="{{asset2}}" style="width:200; border: solid 1px #bcbcbc"/></th>
      <td class="govuk-table__cell"><a class="govuk-link" href="set-evidence-date-2.html">{{date2_1}}</a><br>-<br><a class="govuk-link" href="set-evidence-date-2.html">{{date2_2}}</a></td>
      <td class="govuk-table__cell"><a class="govuk-link" href="immunity-bills-comment.html">{{comment2}}</a></td>
    </tr>
    <tr class="govuk-table__row">
       <th scope="row" class="govuk-table__header"><img src="{{asset3}}" style="width:200; border: solid 1px #bcbcbc"/></th>
      <td class="govuk-table__cell"><a class="govuk-link" href="set-evidence-date.html">{{date3_1}}</a><br>-<br><a class="govuk-link" href="set-evidence-date.html">{{date3_2}}</a></td>
      <td class="govuk-table__cell"><a class="govuk-link" href="immunity-bills-comment.html">{{comment3}}</a></td>
    </tr>
    <tr class="govuk-table__row">
       <th scope="row" class="govuk-table__header"><img src="{{asset4}}" style="width:200; border: solid 1px #bcbcbc"/></th>
      <td class="govuk-table__cell"><a class="govuk-link" href="set-evidence-date.html">{{date3_1}}</a><br>-<br><a class="govuk-link" href="set-evidence-date.html">{{date3_2}}</a></td>
      <td class="govuk-table__cell"><a class="govuk-link" href="immunity-bills-comment.html">{{comment3}}</a></td>
    </tr>
  </tbody>
</table>


{% endblock %}

{% endmacro %}